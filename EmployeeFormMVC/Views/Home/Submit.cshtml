

@model List<EmployeeFormMVC.Models.Employee>
@using EmployeeFormMVC.Models


<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

@{
    var employeeList = ViewBag.Mylist as List<Employee>;

    // var employeeList = datalist as List<Employee>;
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Employee Code</th>
            <th>Employee Name</th>
            <th>Date of Birth</th>
            <th>City</th>
            <th>Gender</th>
            <th>Active</th>
            <th>Image</th>
            <th>Action</th>


        </tr>
    </thead>
    <tbody>
        @if (employeeList != null && employeeList.Count > 0)
        {
            //var e = 1;

            foreach (var employee in employeeList)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.emCode</td>
                    <td>@employee.emName</td>
                    <td>@employee.emDob</td>
                    <td>@employee.emCity</td>
                    <td>@employee.emGender</td>
                    <td>@employee.emActive</td>
                    <td>@employee.emImage</td>
                    <td>
                        <a href="@Url.Action("Edit", "Home" , new { id = @employee.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", "Home",new {id=@employee.Id})">Delete</a>
                    </td>
                    <!-- Add more columns if needed -->
                </tr>
               // e = e + 1;
            }

        }
    </tbody>
</table>



